{
    "files": {
        "includes": ["scripts/**/*.mjs", "**/packages/**/*.mjs", "**/packages/**/*.ts", "!**/dist", "!**/generated", "!**/bundle"]
    },
    "linter": {
        "rules": {
            "style": {
                "useNodejsImportProtocol": {
                    "level": "warn",
                    "fix": "safe"
                },
                "useImportType": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "attributePosition": "auto",
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 160,
        "lineEnding": "lf"
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    }
}
